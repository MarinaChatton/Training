<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/test1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="show toast"
            android:backgroundTint="#1B5E91"/>

        <Button
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="picasso"
            android:backgroundTint="#1B5E00"/>

        <Button
            android:id="@+id/test3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="palindrome"
            android:backgroundTint="#1B8E91"/>

        <Button
            android:id="@+id/test4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="list"
            android:backgroundTint="#1F0E91"/>

        <Button
            android:id="@+id/test5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="list 2"
            android:backgroundTint="#00FF58"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/test6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Fragments"
            android:backgroundTint="#FF88"/>

        <Button
            android:id="@+id/test7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test 7"
            android:backgroundTint="#CC4"/>

        <Button
            android:id="@+id/test8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test 8"
            android:backgroundTint="#1B5E91"/>

        <Button
            android:id="@+id/test9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test 9"
            android:backgroundTint="#CC00"/>

        <Button
            android:id="@+id/test10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test 10"
            android:backgroundTint="#EE7890"/>
    </LinearLayout>
</LinearLayout>
